<?xml version='1.0' encoding="utf-8"?>
<extension type="module" version="3.4" client="site" method="upgrade">
	<name>DT Simple Youtube Embed</name>
	<author>Detalhar</author>
	<creationDate>2015/7/1</creationDate>
	<authorEmail>developer@detalharweb.com.br</authorEmail>
	<authorURL>http://detalharweb.com.br</authorURL>
	<copyright>Copyright (C) Detalhar. All rights reserved</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html or see LICENSE.txt</license>
	<version>0.1.0</version>
	<description>Embed Youtube videos in Joomla</description>
	<files>
		<filename module="mod_dt_youtube_embed">mod_dt_youtube_embed.php</filename>
		<folder>assets</folder>
		<folder>language</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>mod_dt_youtube_embed.xml</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
		<fieldset name="basic">
			
		</fieldset>

		<fieldset name="advanced">
			<field
				name="layout"
				type="modulelayout"
				label="JFIELD_ALT_LAYOUT_LABEL"
				description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				/>
			<field
				name="moduleclass_sfx"
				type="textarea"
				rows="3"
				label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			
		</fieldset>
	</fields>
	</config>
</extension>